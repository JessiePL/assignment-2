<%- include("templates/header") %>

<div class="container mt-4">
           <% if(error) {%>
                    <div class="alert alert-danger"><%=error%></div>
          <% } else if (users) { %>
          <h2>Users</h2>
          <table class="table table-bordered table-hover">
                    <thead class="table-light">
                              <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Actions</th>
                              </tr>
                    </thead>
                    <tbody>
                              <% users.forEach(user =>{%>
                              <tr>
                                        <td><%=user.name %></td>
                                        <td><%=user.email%></td>
                                        <td><%=user.user_type%></td>
                                        <td>
                                                  <% if( user.user_type ==='admin') {%>
                                                            <a href="/admin/demote/<%= user.email %>" class ="btn btn-danger btn-sm">Demote to User</a>
                                                  <% }else{%>
                                                            <a href="/admin/promote/<%= user.email %>" class ="btn btn-success btn-sm">Promote to Admin</a>
                                                  <% } %>
                                        </td>
                              </tr>
                              <% }) %>
                    </tbody>
          </table>
          <%}%>
</div>

<%- include("templates/footer") %>